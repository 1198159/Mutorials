<%# Code for a snapshot of the daily question %>

<% try { %>

    <% let questionSnippet = question; %>
    
    <div class="card">

        <h5 class="card-header text-center"><%= new Date().toISOString().split('T')[0] %> Daily Question</h5>

        <div class="card-body">

            <p class="card-text"><%- questionSnippet.question %></p>

            <% if(question.type == "mc") { %>
                
                <div class="mt-4" id="mc-choices">
                    <% var choiceIndex = 1; %>
                    <% questionSnippet.choices.forEach((choice) => { %>
                        <div class="custom-control custom-radio">
                            <input class="custom-control-input" type="radio" name="answerChoice" id="<%= choiceIndex %>" disabled>
                            <label class="custom-control-label" for="<%= choiceIndex %>"><%= String.fromCharCode(64+choiceIndex) %>. <%= choice %></label>
                            <% choiceIndex++; %>
                        </div>
                    <% }) %>
                </div>
                
            <% } else if(questionSnippet.type == "sa") { %>
                
                <div class="mt-4" id="sa-choices">
                    <% var choiceIndex = 1; %>
                    <% questionSnippet.choices.forEach((choice) => { %>
                        <div class="custom-control custom-checkbox my-1 mr-sm-2">
                            <input type="checkbox" name="saChoice" class="custom-control-input" id="<%= choiceIndex %>" disabled>
                            <label class="custom-control-label" for="<%= choiceIndex %>"><%= String.fromCharCode(64+choiceIndex) %>. <%= choice %></label>
                        </div>
                        <% choiceIndex++; %>
                    <% }) %>
                </div>
                
            <% } %>

            <h6 class="card-title mt-4 text-center">Go to the daily page to view the answer explanation!</h6>

        </div>
    </div>

<% } catch(err) { %>
    <p class="text-center"><font color="red">[Site component can not be displayed due to an internal error]</font></p>
<% } %>