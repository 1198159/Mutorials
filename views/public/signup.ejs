<!-- this is code for the signup page -->

<%- include("../partials/header") -%>

<h1 class="my-5 container">Sign up to Mutorials!</h1>

<div class="jumbotron container">
    <%- include("../partials/flashes") -%>

    <form action="/register" method="post">
        <div class="form-group">
            <input type="text" class="form-control" id="signupEmail" placeholder="Email Address" name="username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="signupPassword" placeholder="Password" name="password">
        </div>
        <div class="form-group">
            <input type="ign" class="form-control" id="ign" placeholder="Username" name="ign">
        </div>
        <div class="container mt-4 mb-5">
            <a type="button" class="btn btn-secondary" id="cancel" href="/">Cancel</a>
            <input class="btn btn-primary" type="submit" value="Sign Up">
        </div>
    </form>
</div>


<%- include("../partials/footer") -%>
