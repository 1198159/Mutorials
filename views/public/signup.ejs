<!-- this is code for the signup page -->

<%- include("../partials/header") -%>

<!-- javascript to flash -->
<script>

    $(document).ready(function () {

        // hide flash message
        $("#flash").hide();
    });

</script>

<h1 class="my-5 container">Sign up to Mutorials!</h1>

<div class="jumbotron container">

    <form action="/register" method="post">
        <div class="form-group">
            <input type="text" class="form-control" id="signupEmail" placeholder="Email Address" name="username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="signupPassword" placeholder="Password" name="password">
        </div>
        <div class="container mt-4 mb-5">
            <a type="button" class="btn btn-secondary" id="cancel" href="/">Cancel</a>
            <input class="btn btn-primary" type="submit" value="Sign Up">
        </div>
    </form>

    <!-- can have different types of flash messages in the future -->
    <h4 class="my-4" id="flash"><font color="red">INSERT FLASH MESSAGE</font></h4>

</div>


<%- include("../partials/footer") -%>