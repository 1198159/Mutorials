<!-- this is code for the signin/login page -->

<%- include("../partials/header") -%>

<!-- send to backend -->
<script>

    // SIGNIN
    $(document).ready(function () {
        var username, pass;
        $("#loginSubmit").click(function () {
            username = $("#loginEmail").val();
            pass = $("#loginPassword").val();
            $.post("/login", { username: username, password: pass }, function (data) {
                location.reload(true);
            });
        });
    });
</script>

<h1 class="my-5 container">Sign in to Mutorials!</h1>

<div class="jumbotron container">

	<form action="/login">
		<div class="form-group">
			<input type="text" class="form-control" id="loginEmail" placeholder="Email Address">
		</div>
		<div class="form-group">
			<input type="password" class="form-control" id="loginPassword" placeholder="Password">
		</div>
		<div class="form-check">
			<input type="checkbox" class="form-check-input" id="stayLoggedIn">
			<label class="form-check-label">Keep me signed in</label>
		</div>
	</form>

</div>

<div class = "container mt-4 mb-5">
    <a type="button" class="btn btn-secondary" id="cancel" href="/">Cancel</a>
    <button type="button" class="btn btn-primary" id="loginSubmit">Sign In</button>
</div>

<%- include("../partials/footer") -%>