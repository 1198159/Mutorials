<!-- This is the page on which you choose the subject you want to train on -->

<!-- ARGUMENTS:
    subjects - a list of subjects to train on -->

<%- include("../partials/header") -%>
<%- include("../partials/navigation") -%>

<div class="jumbotron container mt-5">

	<h3>Please select a subject below to train on:</h3>
    <form action="/selQ" method="POST">
        <input type="hidden" name="qNum" value="<%=qNum%>">
        <% Object.keys(subjects).forEach((subject) => { %>
            <!--<a href="/train/<%= subject %>/choose_units"> -->
            <input type="submit" name="subj" class="btn btn-primary btn-lg btn-block my-2" id="<%= subject %>" value="<%= subject %>">
        <% }) %>
    </form>
</div>

<%- include("../partials/footer") -%>