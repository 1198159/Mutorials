<!-- This is the page to display questions on -->

<!-- ARGUMENTS:
    type - a string which is either "mc" (multiple choice), "sa" (select all), or "fr" (free response)
    question - a string which is the question statement
    choices - if type = "mc" or "sa", this is an array of the possible answer choices; otherwise, pass in empty array or nothing at all
    rating - a number, question rating
    source - a string, question source -->

<%- include("../partials/header") -%>
<%- include("../partials/navigation") -%>

<div class="jumbotron container mt-5">

    <h3>Question Info</h3>
    <p>Rating: <%= rating %></p>
    <p>Source: <%= source%></p>

    <% if(type == "mc") { %>
        <!-- CODE FOR MULTIPLE CHOICE -->
        <h3>Please read the following question and select the best answer:</h3>
        <p><%= question %></p>

        <div class = "mt-4">
            <% choices.forEach((choice) => { %>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="answerChoice" id="<%= choice %>" value="<%= choice %>">
                    <label class="form-check-label" for="<%= choice %>"><%= choice %></label>
                </div>
            <% }) %>
        </div>
    <% } else if(type == "sa") { %>
        <!-- CODE FOR SELECT ALL  -->
        <h3>Please read the following and select ALL choices that apply:</h3>
        <p><%= question %></p>

        <div class = "mt-4">
            <% choices.forEach((choice) => { %>
                <div class="custom-control custom-checkbox my-1 mr-sm-2">
                    <input type="checkbox" class="custom-control-input" id="<%= choice %>">
                    <label class="custom-control-label" for="<%= choice %>"><%= choice %></label>
                </div>
            <% }) %>
        </div>
    <% } else if(type == "fr") { %>
        <!-- CODE FOR FREE RESPONSE -->
        <h3>Please read the following question and enter your answer in the box:</h3>
        <p><%= question %></p>

        <div class = "mt-4">
            <div class="form-group">
                <input type="number" class="form-control" id="answer" placeholder="Enter your answer here">
            </div>
        </div>
    <% } else { %>
        <!-- ERROR CODE -->
        <h3>We are sorry - your question could not be displayed. Please refresh, press "submit", or reenter the trainer.</h3>
    <% } %>

    <div class = "mt-4">
        <button type="button" class="btn btn-primary" id="next">Submit</button>
    </div>
    
</div>

<%- include("../partials/footer") -%>